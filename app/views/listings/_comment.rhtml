<div class="comment">
  <span class="date"><%= comment.created_at.strftime("%d-%b-%y @ %I:%M%p") %><% if user_logged_in? and is_admin? -%> &nbsp;[admin: <%= link_to 'delete', {:action => 'destroy_comment', :id => comment}, :confirm => 'Are you sure you want to delete this comment?' %>]<% end -%></span><br/>
  <h2><strong><%= comment.user.name %></strong> said:</h2>
  <%= textilize(comment.body) %>
</div>
