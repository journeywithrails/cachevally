<!-- display all REQUEST vars -->

<h1>REQUEST Variables</h1>

<table>
<tr>
  <th>key</th>
  <th>value</th>
</tr>
<% for item in request.env -%>
<tr>
  <td><%= item[0] %></td>
  <td><%= item[1] %></td>
</tr>
<% end -%>
</table>

<p><strong>Remote IP:</strong> <%= request.remote_ip %></p>